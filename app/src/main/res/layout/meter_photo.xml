<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Meter_photo">

    <include layout="@layout/menu"></include>

    <LinearLayout
        android:paddingTop="100dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/selectedImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_above="@+id/editTextImageName"
            android:layout_below="@+id/buttonSelect"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="20dip"
            android:src="@drawable/attendance_svgrepo_com"/>

            <Button
                android:id="@+id/cameraBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginBottom="100dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:text="Take Photo"
                android:background="@drawable/button_shap"
                android:drawableLeft="@drawable/baseline_camera_alt_24" />

        <LinearLayout
            android:id="@+id/textbox_bg1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal"
            android:background="@drawable/textbox_shap"
            android:elevation="2dp">
            <EditText
                android:id="@+id/enter_message"
                android:hint="Enter meter Value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dip"
                android:background="@null"
                android:ems="10"
                android:inputType="textEmailAddress"
                style="@style/textbox_theme"/>
        </LinearLayout>

        <Button
            android:id="@+id/uploadbtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="10dip"
            android:background="@drawable/button_shap"
            android:text="Upload Photo"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/uploadbtn1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="10dip"
            android:background="@drawable/button_dis_shap"
            android:text="Upload Photo"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>