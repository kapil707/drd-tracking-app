<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Delivery_chemist_photo"
    android:layout_centerHorizontal="true">

    <include layout="@layout/menu"></include>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dip"
        android:paddingTop="10dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/page_textclr_theme"
                        android:textSize="18dip"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Material photo1"/>

                    <ImageView
                        android:id="@+id/pg_photo1"
                        android:layout_width="fill_parent"
                        android:layout_height="120dp"
                        android:layout_above="@+id/editTextImageName"
                        android:layout_below="@+id/buttonSelect"
                        android:src="@drawable/attendance_svgrepo_com"/>

                    <TextView
                        android:id="@+id/pg_photo_error1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/page_textclr_error_theme"
                        android:textSize="16dip"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Select Material photo1"/>

                    <Button
                        android:id="@+id/pg_photo_btn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/button_shap"
                        android:text="Material photo1"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:drawableLeft="@drawable/baseline_camera_alt_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/page_textclr_theme"
                        android:textSize="18dip"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Material photo2"/>

                    <ImageView
                        android:id="@+id/pg_photo2"
                        android:layout_width="fill_parent"
                        android:layout_height="120dp"
                        android:layout_above="@+id/editTextImageName"
                        android:layout_below="@+id/buttonSelect"
                        android:src="@drawable/attendance_svgrepo_com"/>

                    <TextView
                        android:id="@+id/pg_photo_error2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/page_textclr_error_theme"
                        android:textSize="16dip"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Select Material photo2"/>

                    <Button
                        android:id="@+id/pg_photo_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/button_shap"
                        android:text="Material photo2"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:drawableLeft="@drawable/baseline_camera_alt_24" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_marginTop="20dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/page_textclr_theme"
                        android:textSize="18dip"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Payment Detail"/>

                    <ImageView
                        android:id="@+id/pg_photo3"
                        android:layout_width="fill_parent"
                        android:layout_height="120dp"
                        android:layout_above="@+id/editTextImageName"
                        android:layout_below="@+id/buttonSelect"
                        android:src="@drawable/attendance_svgrepo_com"/>

                    <TextView
                        android:id="@+id/pg_photo_error3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dip"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:theme="@style/page_textclr_error_theme"
                        android:text="Select Payment Detail"/>

                    <Button
                        android:id="@+id/pg_photo_btn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/button_shap"
                        android:text="Payment Detail"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:drawableLeft="@drawable/baseline_camera_alt_24" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/page_textclr_theme"
                        android:textSize="18dip"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="NR ackn"/>

                    <ImageView
                        android:id="@+id/pg_photo4"
                        android:layout_width="fill_parent"
                        android:layout_height="120dp"
                        android:layout_above="@+id/editTextImageName"
                        android:layout_below="@+id/buttonSelect"
                        android:src="@drawable/attendance_svgrepo_com"/>

                    <TextView
                        android:id="@+id/pg_photo_error4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dip"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:theme="@style/page_textclr_error_theme"
                        android:text="Select NR ackn"/>

                    <Button
                        android:id="@+id/pg_photo_btn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/button_shap"
                        android:text="NR ackn"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:drawableLeft="@drawable/baseline_camera_alt_24" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/page_textclr_theme"
                    android:layout_marginBottom="10dp"
                    android:textSize="18dip"
                    android:text="Select Payment Type"/>

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:id="@+id/textbox_bg2"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal"
                    android:background="@drawable/textbox_shap"
                    android:elevation="2dp">
                    <EditText
                        android:id="@+id/enter_message2"
                        android:hint="Enter Payment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dip"
                        android:background="@null"
                        android:ems="10"
                        style="@style/textbox_theme"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/enter_remarks_error2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16dip"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:theme="@style/page_textclr_error_theme"
                    android:text="Enter Remarks"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/page_textclr_theme"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="15dip"
                android:textSize="18dip"
                android:text="Message"/>

            <LinearLayout
                android:id="@+id/textbox_bg1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:orientation="horizontal"
                android:background="@drawable/textbox_shap"
                android:elevation="2dp">
                <EditText
                    android:id="@+id/enter_message"
                    android:hint="Enter Remarks"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dip"
                    android:background="@null"
                    android:ems="10"
                    style="@style/textbox_theme"/>
            </LinearLayout>

            <TextView
                android:id="@+id/enter_remarks_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="16dip"
                android:gravity="center"
                android:layout_gravity="center"
                android:theme="@style/page_textclr_error_theme"
                android:text="Enter Remarks"/>

            <Button
                android:id="@+id/buttonUpload"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginBottom="10dip"
                android:background="@drawable/button_shap"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/buttonUpload1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginBottom="10dip"
                android:background="@drawable/button_dis_shap"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>